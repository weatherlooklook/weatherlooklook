<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu_closet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add"
            tools:ignore="MissingConstraints">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSpring"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="봄"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSummer"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여름"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFall"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가을"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipWinter"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="겨울"
                tools:ignore="MissingConstraints" />

        </com.google.android.material.chip.ChipGroup>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="80dp"
            android:text="삭제"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/add"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="80dp"
            android:text="추가"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="375dp">


        <Button
            android:id="@+id/allouter"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_marginStart="350dp"
            android:layout_marginEnd="40dp"

            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/myViewPager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/myViewPager"
            app:layout_constraintTop_toTopOf="@+id/myViewPager"
            tools:ignore="MissingConstraints" />


        <androidx.viewpager.widget.ViewPager


            android:id="@+id/myViewPager"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:layout_constraintBottom_toTopOf="@+id/myViewPager2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.viewpager.widget.ViewPager>

        <Button
            android:id="@+id/alltop"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="40dp"

            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/myViewPager2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/myViewPager2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/myViewPager2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:layout_constraintBottom_toTopOf="@+id/myViewPager3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        </androidx.viewpager.widget.ViewPager>


        <Button
            android:id="@+id/allpant"
            android:layout_width="40dp"
            android:layout_height="120dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="245dp"
            android:layout_marginEnd="40dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/myViewPager3"
            app:layout_constraintEnd_toEndOf="@+id/myViewPager3"
            app:layout_constraintStart_toStartOf="@+id/myViewPager3"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/myViewPager3"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        </androidx.viewpager.widget.ViewPager>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>